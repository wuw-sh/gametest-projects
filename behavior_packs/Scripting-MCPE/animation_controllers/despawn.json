{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.despawn": {
      "states": {
        "default": {
          "transitions": [
            {
              "norider": "!query.has_rider && query.life_time > 0.5"
            }
          ]
        },
        "norider": {
          "on_entry": [
            "@s despawn"
          ]
        }
      }
    }
  }
}